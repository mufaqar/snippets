Ajax Insert Post

Add in Function.php

add_action('wp_ajax_update_user_reference', 'update_user_reference', 0);
add_action('wp_ajax_nopriv_update_user_reference', 'update_user_reference');
function update_user_reference() {
	 
	  $title = stripcslashes($_POST['title']);	  
	  $postID = stripcslashes($_POST['postID']);	  
	 
	
	  $user_data = array(
	     'ID'        => $postID,
	      'post_title' => $title,
		 	);
		

		
		
				
	  $user_id = wp_update_post($user_data);
	 
	  	if (!is_wp_error($user_id)) {
	     // sucess message
		  		  
		  
	  	} else {	    	
	        echo $wp_error;    
	  	}		
		die;
}
